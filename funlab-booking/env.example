# Configuration du fichier .env

# ============================================================
# OAUTH CONFIGURATION
# ============================================================

# Google OAuth
# 1. Créez un projet sur https://console.cloud.google.com/
# 2. Activez Google+ API
# 3. Créez des identifiants OAuth 2.0
# 4. Ajoutez les redirect URIs :
#    - http://localhost:8080/auth/google/callback
#    - https://funlab.tn/auth/google/callback
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
# 1. Créez une app sur https://developers.facebook.com/
# 2. Ajoutez Facebook Login
# 3. Configurez les OAuth Redirect URIs :
#    - http://localhost:8080/auth/facebook/callback
#    - https://funlab.tn/auth/facebook/callback
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# ============================================================
# DATABASE CONFIGURATION
# ============================================================
database.default.hostname = localhost
database.default.database = funlab_booking
database.default.username = root
database.default.password = 
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306

# ============================================================
# EMAIL CONFIGURATION (pour password reset)
# ============================================================
email.fromEmail = noreply@funlab.tn
email.fromName = FunLab Tunisie
email.SMTPHost = smtp.gmail.com
email.SMTPUser = your-email@gmail.com
email.SMTPPass = your-app-password
email.SMTPPort = 587
email.SMTPCrypto = tls

# ============================================================
# APP CONFIGURATION
# ============================================================
app.baseURL = http://localhost:8080
app.sessionDriver = CodeIgniter\Session\Handlers\FileHandler
app.sessionCookieName = funlab_session
app.sessionExpiration = 7200
app.sessionSavePath = writable/session
app.cookieDomain = 
app.cookiePrefix = funlab_
app.cookieSecure = false
app.cookieHTTPOnly = true
app.CSRFProtection = false
