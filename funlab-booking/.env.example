#--------------------------------------------------------------------
# FUNLAB BOOKING SYSTEM - Environment Variables
#--------------------------------------------------------------------
# Copiez ce fichier vers .env et modifiez les valeurs selon votre environnement
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

app.baseURL = 'http://localhost:8080/'
app.indexPage = ''
app.forceGlobalSecureRequests = false
app.sessionDriver = 'CodeIgniter\Session\Handlers\FileHandler'
app.sessionCookieName = 'funlab_session'
app.sessionExpiration = 7200
app.sessionSavePath = null
app.sessionMatchIP = false
app.sessionTimeToUpdate = 300
app.sessionRegenerateDestroy = false

app.CSPEnabled = false

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------

database.default.hostname = localhost
database.default.database = funlab_booking
database.default.username = root
database.default.password = 
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306

#--------------------------------------------------------------------
# FUNLAB SPECIFIC SETTINGS
#--------------------------------------------------------------------

# Horaires d'ouverture (format HH:MM:SS)
funlab.openingTime = 09:00:00
funlab.closingTime = 22:00:00

# Incrément des créneaux (en minutes)
funlab.slotIncrement = 30

# Délai minimum de réservation (en heures)
funlab.minBookingAdvance = 2

# Délai maximum de réservation (en jours)
funlab.maxBookingAdvance = 90

# Email de contact
funlab.contactEmail = contact@funlab.tn
funlab.supportPhone = +216 70 123 456

# Activer les notifications par email
funlab.emailNotifications = true

# Monnaie
funlab.currency = TND
funlab.currencySymbol = DT

#--------------------------------------------------------------------
# EMAIL CONFIGURATION
#--------------------------------------------------------------------

email.protocol = smtp
email.SMTPHost = smtp.gmail.com
email.SMTPPort = 587
email.SMTPUser = votre-email@gmail.com
email.SMTPPass = votre-mot-de-passe
email.SMTPCrypto = tls
email.fromEmail = noreply@funlab.tn
email.fromName = 'FunLab Tunisie'

#--------------------------------------------------------------------
# QR CODE SETTINGS
#--------------------------------------------------------------------

qrcode.size = 300
qrcode.errorCorrectionLevel = M
qrcode.margin = 2

#--------------------------------------------------------------------
# LOGGING
#--------------------------------------------------------------------

logger.threshold = 4
# 1 = Emergency, 2 = Alert, 3 = Critical, 4 = Error, 5 = Warning, 6 = Notice, 7 = Info, 8 = Debug

#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------

# Session secret key (générez une clé aléatoire unique)
encryption.key = YOUR_ENCRYPTION_KEY_HERE_32_CHARS

# CSRF Token
security.tokenName = csrf_token
security.headerName = X-CSRF-TOKEN
security.cookieName = csrf_cookie
security.expires = 7200
security.regenerate = true

#--------------------------------------------------------------------
# CACHE
#--------------------------------------------------------------------

cache.handler = file
cache.ttl = 3600

#--------------------------------------------------------------------
# DEVELOPMENT TOOLS
#--------------------------------------------------------------------

# Afficher la barre de débogage
toolbar.enabled = true

# Afficher les erreurs
error.showErrors = true
error.showDeprecated = true
